        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto",
        "wideLayout": true
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "editorMode": "code",
          "expr": "sum(rate(nightowl_alerts_deduplicated_total[5m])) / clamp_min(sum(rate(nightowl_alerts_received_total[5m])), 1)",
          "legendFormat": "Dedup Ratio",
          "instant": true,
          "refId": "A"
