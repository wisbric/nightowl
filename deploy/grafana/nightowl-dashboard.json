      "description": "Ratio of deduplicated alerts to total received alerts. Higher is better -- indicates effective deduplication.",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "options": { "match": "null", "result": { "text": "N/A" } },
              "type": "special"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "#F2495C", "value": null },
              { "color": "#FF9830", "value": 0.2 },
              { "color": "#73BF69", "value": 0.5 }
            ]
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 4, "x": 16, "y": 1 },
      "id": 3,
